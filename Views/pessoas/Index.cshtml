@model IEnumerable<WebReverseEngineering.Models.pessoa>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nome_pessoa)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.idade_pessoa)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nome_pessoa)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idade_pessoa)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_pessoa">Edit</a> |
